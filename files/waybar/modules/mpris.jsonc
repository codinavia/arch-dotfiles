{
    "mpris#title": {
        "format": "{title}",
        "format-paused": "{title}",
        "artist-len": 10,
        "title-len": 20
    },
    
    "group/media": {
        "orientation": "horizontal",
        "modules": [
            "custom/prev",
            "mpris#menu",
            "custom/next",
            "mpris"
        ]
    },

    "custom/prev": {
        "format": "Û∞íÆ",
        "on-click": "playerctl previous",
        "exec": "playerctl status",
        "interval": 1,
        "exec-if": "playerctl status",
        "tooltip": false
    },

    "mpris#menu": {
        "format": "ÔÅã",
        "format-paused": "Ôäã",
        "on-click": "playerctl play-pause",
        "tooltip": false
    },

    "mpris": {
        "interval": 0.5,
        /* "format": "{player_icon} {title} // {position} : {length}",
        "format-paused": "{status_icon}  |  {player_icon} {title} // {position} : {length}", */
        "format": "{player_icon} {title} // {position} : {length}",
        "format-paused": "{player_icon} {title} // {position} : {length}",
        "artist-len": 10,
        "title-len": 20,
        "player-icons": {
            "default": "ÔÄù ",
            "mpv": "üéµ",
            "firefox": "Ôâ© ",
            "chromium": "ÔÖ™ ",
            "zen-browser": "Û∞∫ï "
        },

        "status-icons": {
            "paused": "Ôäã ",
            "playing": "ÔÅã",
            "stopped": "ÔÅç "
        },

        /* "on-click": "playerctl play-pause", */
        "tooltip-format": "{player_icon}  | {title} by {artist} [{position} : {length}]"
    },

    "custom/next": {
        "format": "Û∞í≠",
        "on-click": "playerctl next",
        "exec": "playerctl status",
        "interval": 1,
        "exec-if": "playerctl status",
        "tooltip": false
    },

    "group/mpris-group": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "mpris",
            "transition-left-to-right": true
        },

        "modules": ["mpris", "mpris#title"]
    }
}