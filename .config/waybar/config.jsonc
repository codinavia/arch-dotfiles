{
  "layer": "top",
  "position": "top",
  "height": 40,
  "spacing": 4,

  "modules-left": [
    "battery",
    "audio",
    "hyprland/workspaces",
    "hyprland/window",
    "tray"
  ],

  "modules-center": [
    "hyprland/workspaces",
    "group/mpris-group"
  ],

  "modules-right": [
    "network",
    "bluetooth",
    "cpu",
    "clock"
  ],

  "hyprland/workspaces": {
