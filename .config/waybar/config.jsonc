    "format-icons": {
      "active": "ÔÜí  ",
      "default": "Û∞ä† ",
      "empty": "Û∞∫ï  "
    },

    "persistent-workspaces": {
      "*": [1, 2, 3, 4, 5]
    }
  },

  "hyprland/window": {
    "format": "{class}",
    "min-length": 5,
    "max-length": 20,

    "rewrite": {
      // terminal
      "kitty": "Ôíâ  kitty",
      
      // browser
      ".*Zen Browser.*": "<span foreground='#f5a97f'>Û∞∫ï  </span> Zen Browser",

