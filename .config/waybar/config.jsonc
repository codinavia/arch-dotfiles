      "(.*).xlsx": "<span foreground='#a6da95'>ÔáÉ </span> $1.xlsx",
      "(.*).pptx": "<span foreground='#f5a97f'>ÔáÑ </span> $1.pptx",
      "(.*).pdf": "<span foreground='#ed8796'>ÔáÅ </span> $1.pdf",

      // system
      "Authenticate": "Ôíú  Authenticate"
    }
  },

  "tray": {
    "spacing": 10
  },

  "clock": {
    "format": "ÔÄó  {:%H:%M}",
    "format-alt": "ÔÅ≥  {:%a, %d %b}",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "format": {
        "months": "<span color='#cba6f7'><b>{}</b></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b>{}</b></span>",
      }
    },

    "actions": { 
      "on-click-right": "mode" ,
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "cpu": {
    "interval": 1,
    "format": "Ôíº  {usage}% "
  },

  "network": {
    "format-wifi": "{icon}",
    "format-ethernet": "Û∞àÄ ",
    "format-disconnected": "Û∞ñ™ ",
    "tooltip-format": "{essid}",
    "on-click": "kitty nmtui",
    "format-icons": ["Û∞§Ø ", "Û∞§ü ", "Û∞§¢ ", "Û∞§• ", "Û∞§® "]
  },

  "bluetooth": {
    "format-on": "Û∞ÇØ ",
    "format-off": "Û∞Ç≤ ",
    "format-connected-battery": "{device_battery_procentage}% {icon}",
    "format-connected": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected", 
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
    "on-click-right": "rofi-bluetooth &",
    "format-icons": ["Û∞§æ ", "Û∞•Ä ", "Û∞•É ", "Û∞•Ü ", "Û∞•à "]
  },

  "audio": {
    "format": "{icon} <span font='11'>{volume}%</span>",
    "format-muted": "Ô™Ä",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "Û∞ïæ"]
    },

    "on-click-middle": "pavucontrol",
    "on-click": "swayosd-client --output-volume mute-toggle",
    "on-scroll-up": "swayosd-client --output-volume +1",
    "on-scroll-down": "swayosd-client --output-volume -1",
    "tooltip": true,
    "tooltip-format": "{volume}%"
  },

  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },

    "format": "{capacity}% {icon}",
    "format-warning": "{capacity}% {icon} ",
    "format-critical": "{capacity}% {icon} ",
    "format-charging": "{capacity}% <span font-family='JetBrains Mono Nerd'>ÔÉß </span>",
    "format-plugged": "ÔÆ£",

    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },

  "mpris#title": {
    "format": "{title} ",
    "format-paused": " {title} ",
    "artist-len": 10,
    "title-len": 20
  },

  "mpris": {
    "format": "{player_icon}",
    "format-paused": "{status_icon} | {player_icon}",
    "artist-len": 10,
    "title-len": 20,
    "player-icons": {
      "default": "ÔÄù ",
      "mpv": "üéµ",
      "firefox": "Ôâ© ",
      "chromium": "ÔÖ™ ",
      "zen-browser": "Û∞∫ï "
    },

    "status-icons": {
      "paused": "Ôäã ",
      "playing": "ÔÅã",
      "stopped": "ÔÅç"
    }
  },

  "custom/power-menu": {
    "format": " ‚èª ",
    "on-click": "bash ~/.config/waybar/scripts/powermenu.sh &"
  },

  "group/audio": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "pulseaudio",
      "transition-left-to-right": true,
    },
    "modules": ["pulseaudio", "pulseaudio#microphone"],
  },

  "group/mpris-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "mpris",
      "transition-left-to-right": true
    },

    "modules": ["mpris", "mpris#title"]
  }
}
