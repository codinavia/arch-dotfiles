{
  "layer": "top",
  "modules-left": [
    "hyprland/window",
    "custom/separator#dot-line",
    "group/mobo_drawer",
    "custom/separator#dot-line",
    "hyprland/workspaces",
    "custom/separator#dot-line",
    "custom/update",
    "custom/separator#dot-line",
    "custom/weather"
  ],

  "modules-center": [
    "custom/swaync",
    "custom/separator#dot-line",
    "group/clock-group",
    "custom/separator#dot-line",
    "group/util-toggle-group"
  ],

  "modules-right": [
    "group/mpris-group",
    "custom/separator#dot-line",
    "tray",
    "custom/separator#dot-line",
    "group/audio",
    "group/backlight-group",
    "group/battery-group",
    "custom/separator#dot-line",
    "custom/power-menu"
  ],

  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{name}",
    "format-icons": {
      "1": "Û∞∫ï ",
      "2": "Û∞Ñõ ",
      "3": "Ôì∂ ",
      "4": "Ôíâ ",
      "5": "Óú• ",
      "6": "Û∞âã ",
      "7": "ÔÄ≠ ",
      "8": "Û∞ìá ",
      "9": "Û∞ôØ ",
      "10": "Óàó ",
    },

    "all-outputs": false,
    "disable-scroll": false,
    "active-only": false,
    "display-condition": "only-populated",
    "min-length": 10,
  },

  "hyprland/window": {
    "format": "{class}",
    "min-length": 5,
    "max-length": 20,

    "rewrite": {
      "": "<span foreground='#8aadf4'>Ôçô </span> Hyprland",

      // terminal
      "kitty": "ÓØä  Kitty",

      // browser
      "(?i).*zen browser.*": "<span foreground='#f5a97f'>Û∞∫ï  </span> Zen Browser",

      // visual studio code
      "(.*) - Visual Studio Code": "<span foreground='#8aadf4'>Û∞®û  </span> $1",
      "(.*)Visual Studio Code": "<span foreground='#8aadf4'>Û∞®û  </span> Visual Studio Code",

      // neovim
      "nvim": "<span foreground='#a6da95'>ÓöÆ  </span> Neovim",
      "nvim (.*)": "<span foreground='#a6da95'>ÓöÆ  </span> $1",

      // file manager
      "nautilus": "<span foreground='#8aadf4'>Û∞âã  </span> Nautilus",
      "(.*).jpg": "ÔÄæ  $1.jpg",
      "(.*).png": "ÔÄæ  $1.png",
      "(.*).svg": "ÔÄæ  $1.svg",

      // social
      "‚Ä¢ Discord(.*)": "discord$1",
      "(.*)Discord(.*)": "<span foreground='#8aadf4'>Ôáø  </span> Discord",

      // documents
      "ONLYOFFICE Desktop Editors": "<span foreground='#ed8796'>Ó∫® </span> OnlyOffice Desktop",
      "(.*).docx": "<span foreground='#8aadf4'>ÔáÇ </span> $1.docx",
      "(.*).xlsx": "<span foreground='#a6da95'>ÔáÉ </span> $1.xlsx",
      "(.*).pptx": "<span foreground='#f5a97f'>ÔáÑ </span> $1.pptx",
      "(.*).pdf": "<span foreground='#ed8796'>ÔáÅ </span> $1.pdf",

      // system
      "Authenticate": "Ôíú  Authenticate",
    },
  },

  "tray": {
    "spacing": 10,
  },

  "power-profiles-daemon": {
    "format": "{icon} ",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨",
    },
  },

  "clock#time": {
    "format": "ÔÄó  {:%H:%M:%S}",
    "format-alt": "ÔÅ≥  {:%a, %d %b}",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#f5e0dc'><b>{}</b></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b>{}</b></span>",
      },
    },
    "actions": { "on-click-right": "mode" },
    "min-length": 8,
    "max-length": 28,
  },

  "clock#date": {
    "format": " ÔÅ≥  {:%A, %d %B}",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#f5e0dc'><b>{}</b></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b>{}</b></span>",
      },
    },

    "actions": { "on-click-right": "mode" },
    "min-length": 8,
    "max-length": 28,
  },

  "temperature": {
    "interval": 10,
    "tooltip": true,
    "hwmon-path": [
      "/sys/class/hwmon/hwmon1/temp1_input",
      "/sys/class/thermal/thermal_zone0/temp",
    ],

    "critical-threshold": 82,
    "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Û∞à∏"],
    "on-click-right": "ghostty -e nvtop",
  },

  "cpu": {
    "interval": 1,
    "format": "{icon0}{icon1}{icon2}{icon3} {usage:>2}% ",
    "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
  },

  "memory": {
    "states": {
      "warning": 75,
      "critical": 90,
    },

    "format": "Ó∑©  {percentage}%",
    "format-critical": "Û∞Ä¶¬†{percentage}%",
    "tooltip-format": "Memory Used: {used:0.1f} GB / {total:0.1f} GB",
    "interval": 5,
  },

  "backlight#icon": {
    "format": "{icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
    "tooltip": true,
    "tooltip-format": "{percent}%",
    "on-scroll-up": "swayosd-client --brightness +5",
    "on-scroll-down": "swayosd-client --brightness -5",
  },

  "backlight#text": {
    "format": "{percent}%",
    "tooltip": true,
    "tooltip-format": "{percent}%",
    "on-scroll-up": "swayosd-client --brightness +5",
    "on-scroll-down": "swayosd-client --brightness -5",
  },

  "network": {
    "format-wifi": "{icon}",
    "format-ethernet": "Ôõø ",
    "format-disconnected": "Ô™©",
    "tooltip-format": "{essid}",
    "on-click": "~/.config/waybar/scripts/network/rofi-network-manager.sh",
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
  },

  "pulseaudio": {
    "format": "{icon} <span font='11'>{volume}%</span>",
    "format-muted": "Ô™Ä",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "Û∞ïæ"],
    },

    "on-click-middle": "pavucontrol",
    "on-click": "swayosd-client --output-volume mute-toggle",
    "on-scroll-up": "swayosd-client --output-volume +1",
    "on-scroll-down": "swayosd-client --output-volume -1",
    "tooltip": true,
    "tooltip-format": "{volume}%",
  },

  "pulseaudio#microphone": {
    "format": "{format_source} | <span font='11'>{source_volume}% </span>",
    "format-source": "ÔÑ∞",
    "format-source-muted": "Û∞ç≠",
    "on-click": "swayosd-client --input-volume mute-toggle",
    "on-click-middle": "",
    "on-scroll-up": "swayosd-client --input-volume +1",
    "on-scroll-down": "swayosd-client --input-volume -1",
    "tooltip-format": "{source_desc} | {source_volume}%",
  },

  "battery#icon": {
    "bat": "BAT1",
    "adapter": "ACAD",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15,
    },

    "max-length": 20,
    "format": "{icon} ",
    "format-warning": "{icon} ",
    "format-critical": "{icon} ",
    "format-charging": "<span font-family='JetBrains Mono Nerd'>ÔÉß </span>",
    "format-plugged": "ÔÆ£",
    "tooltip": true,
    "tooltip-format": "{capacity}%",

    "format-alt": "{icon} {time}",
    "format-full": "ÔÆ£",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
  },

  "battery#text": {
    "bat": "BAT1",
    "adapter": "ACAD",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15,
    },

    "max-length": 20,
    "format": "{capacity}%",
    "format-warning": "{capacity}%",
    "format-critical": "{capacity}%",
    "format-charging": "{capacity}%",
    "format-plugged": "Plugged",
    "tooltip": true,
    "tooltip-format": "{capacity}%",

    "format-full": "Full",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
  },

  "custom/weather": {
    "exec": "python3 ~/.config/waybar/scripts/weather.py",
    "restart-interval": 300,
    "return-type": "json",
  },

  "mpris#title": {
    "format": "{title} ",
    "format-paused": " {title} ",
    "artist-len": 10,
    "title-len": 20,
  },

  "mpris": {
    "format": "{player_icon}",
    "format-paused": "{status_icon} | {player_icon}",
    "artist-len": 10,
    "title-len": 20,
    "player-icons": {
      "default": "ÔÄù ",
      "mpv": "üéµ",
      "firefox": "Ôâ© ",
      "chromium": "ÔÖ™ ",
      "zen-browser": "Û∞∫ï ",
    },

    "status-icons": {
      "paused": "Ôäã ",
      "playing": "ÔÅã",
      "stopped": "ÔÅç",
    },
  },

  "custom/power-menu": {
    "format": " ‚èª ",
    "on-click": "bash ~/.config/waybar/scripts/powermenu.sh &",
  },

  "custom/launcher": {
    "format": "ÔåÉ",
    "on-click": "bash ~/.config/rofi/launcher.sh &",
  },

  "custom/separator#dot-line": {
    "format": "Óò°",
    "interval": "once",
    "tooltip": false,
  },

  "custom/separator#line": {
    "format": "|",
    "interval": "once",
    "tooltip": false,
  },

  "idle_inhibitor": {
    "tooltip": true,
    "tooltip-format-activated": "Idle_inhibitor active",
    "tooltip-format-deactivated": "Idle_inhibitor not active",
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ ",
      "deactivated": "ÔÅ∞ ",
    },
  },

  "custom/update": {
    "exec": "~/.config/waybar/scripts/system-update.sh",
    "return-type": "json",
    "format": "{}",
    "on-click": "~/.config/waybar/scripts/system-update.sh up",
    "interval": 30,
    "min-length": 3,
  },

  "custom/swaync": {
    "tooltip": true,
    "tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb",
    "format": "{} {icon} ",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑",
    },

    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },

  "group/audio": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "pulseaudio",
      "transition-left-to-right": true,
    },
    "modules": ["pulseaudio", "pulseaudio#microphone"],
  },

  "group/mpris-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "mpris",
      "transition-left-to-right": true,
    },

    "modules": ["mpris", "mpris#title"],
  },

  "group/mobo_drawer": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "cpu",
      "transition-left-to-right": true,
    },

    "modules": ["cpu", "temperature", "memory"],
  },

  "group/backlight-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "backlight#icon",
      "transition-left-to-right": true,
    },
    "modules": ["backlight#icon", "backlight#text"],
  },

  "group/battery-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "battery#icon",
      "transition-left-to-right": true,
    },
    "modules": ["battery#icon", "battery#text"],
  },

  "group/clock-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "clock#time",
      "transition-left-to-right": true,
    },
    "modules": ["clock#time", "clock#date"],
  },

  "group/util-toggle-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "idle_inhibitor",
      "transition-left-to-right": true,
    },
    "modules": ["idle_inhibitor", "power-profiles-daemon"],
  },
}
